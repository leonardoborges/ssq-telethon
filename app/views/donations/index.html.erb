                                    <li class="xf-input">
                                        <label for="name-family">
                                            <span class="xf-label">Family name</span>


                                        </label>
                                        <input type="text" name="customer[family_name]" size="20" maxlength="40" value=""
                                               id="name-family"/></li>
                                </ol>
                            </fieldset>
                        </li>
                        <li class="xf-input">
                            <label for="organisation">
                                <span class="xf-label">Organisation name</span>

                            </label>
                            <input type="text" name="customer[organisation_name]" size="40" maxlength="200" value=""
